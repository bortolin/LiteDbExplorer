<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:LiteDbExplorer"
             x:Class="LiteDbExplorer.ItemLookupPage"
             Title="ItemLookupPage">
    
       
        <CollectionView ItemsSource="{Binding DocData}">
         <CollectionView.ItemTemplate>
             <DataTemplate>
                 <StackLayout Orientation="Horizontal" Margin="5,5,5,5">
                     <Label Text="{Binding Item1}"
                            BackgroundColor="Gray"
                            Padding="2,2,2,2" Margin="2,2,2,2" MinimumWidthRequest="200" FontSize="22" VerticalTextAlignment="Center"></Label>
                     <Entry Text="{Binding Item2}" Margin="2,2,2,2" HorizontalOptions="Fill" FontSize="22">
                     </Entry>
                 </StackLayout>
             </DataTemplate>
         </CollectionView.ItemTemplate>
        </CollectionView>
    
</ContentPage>
